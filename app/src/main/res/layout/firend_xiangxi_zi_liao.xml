            android:layout_alignParentLeft="true"
            android:id="@+id/head_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:background="#fdfdfd"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/nicheng_tv"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/head_imageview"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="10dp"/>
        <TextView
            android:id="@+id/idhao_tv"
            android:gravity="center_vertical"
            android:layout_alignLeft="@+id/nicheng_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/nicheng_tv"
            android:paddingLeft="10dp"
        />
        <ImageView
            android:id="@+id/sex_imageview"
            android:layout_toRightOf="@+id/nicheng_tv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"/>
    </RelativeLayout>
