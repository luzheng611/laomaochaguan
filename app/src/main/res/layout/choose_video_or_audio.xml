<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:showDividers="middle"
    android:divider="@drawable/mdivider"
    >

    <TextView
        android:id="@+id/textview_pressToAudio"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/tougao_addtileimg_bg"
        android:text="按  住  说  话"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/choose_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="本地文件"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/back_sel"
            android:id="@+id/choose_locale_file"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d6d6d6"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="录制视频"
            android:id="@+id/take_camera"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/back_sel"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d6d6d6"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="录制语音"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/back_sel"
            android:gravity="center"
            android:id="@+id/take_audio"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/cancle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/back_sel"
        android:gravity="center"
        android:text="取消"
        android:textColor="#666666"
        android:textSize="17dp" />

