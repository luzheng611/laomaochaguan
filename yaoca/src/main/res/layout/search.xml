<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <ImageView
            android:id="@+id/search_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_black"
            android:background="@drawable/back_sel"/>
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="关键字"
            android:textSize="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/search_gray"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/search_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_typelayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/search_zixun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:text="圈子"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:id="@+id/search_huodong"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:text="活动"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/search_gongyang"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:text="寺庙供养"
            android:gravity="center"
            android:textSize="16dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/search_cishan"
            android:layout_height="wrap_content"
            android:background="@drawable/tag_bg"
            android:text="慈善"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="16dp"/>
    </LinearLayout>
