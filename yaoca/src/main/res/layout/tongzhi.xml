           <!--app:tabIndicatorHeight="0dp"-->
           <!--app:tabSelectedTextColor="@color/white"-->
           <!--&gt;-->
       <!--</android.support.design.widget.TabLayout>-->
   </RelativeLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragment_root">

            </FrameLayout>
</LinearLayout>
