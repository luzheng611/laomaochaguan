<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:id="@+id/content"
        android:background="@drawable/item_sel"
        android:gravity="center_vertical"
        android:padding="10dp" >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <cn.carbs.android.avatarimageview.library.AvatarImageView
                android:id="@+id/user_list_item_head"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <ImageView
                android:id="@+id/user_list_item_tip"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_gravity="bottom|right"
                 />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="名"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/user_list_item_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:visibility="gone"
                android:textColor="#999999"
                />
            <TextView
                android:id="@+id/user_list_item_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:visibility="gone"
                android:text="sdfsd"
                android:textSize="13dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/user_focus"
            android:visibility="gone"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/user_list_item_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="关注"
            android:textSize="14dp" />
    </LinearLayout>



    <TextView
        android:id="@+id/delete"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="取消收藏"
        android:textSize="16dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:gravity="center"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
