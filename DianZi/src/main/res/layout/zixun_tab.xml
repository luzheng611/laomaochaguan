<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.v4.view.ViewPager
        android:id="@+id/zixun_tab_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/zixun_tab_tablayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        app:tabGravity="fill"

        app:tabIndicatorColor="@color/main_color"
        app:tabSelectedTextColor="@color/main_color"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="@color/wordhuise">

    </android.support.design.widget.TabLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="35dp"
        android:background="@color/huise" />

    <ImageView
        android:id="@+id/zixun_tab_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/load_fail"
        android:padding="10dp"
        android:visibility="gone"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shopcar_home"
            android:layout_margin="10dp"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/shopcar_home_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shopcar_main_shape"
                />
        </FrameLayout>


        <TextView
            android:id="@+id/tab1_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="商城"
            android:visibility="gone"
            android:background="#ffffff"
            android:layout_marginBottom="2dp"
            />


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:layout_marginTop="1dp"-->
        <!--android:background="#999999"-->
        <!--/>-->


</FrameLayout>
