<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:id="@+id/commit_dingdan_layout_info">

        <!--<ImageView-->
            <!--android:id="@+id/location"-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:src="@mipmap/location_gray"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="20dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（点击选择收货地址）"
            android:layout_alignBottom="@+id/commit_dingdan_update"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commit_dingdan_user"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="user"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commit_dingdan_phone"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="phone"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/commit_dingdan_address"
            android:layout_below="@+id/commit_dingdan_address"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commit_dingdan_address"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/commit_dingdan_user"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/commit_dingdan_user"
            android:lines="2"
            android:gravity="center"
            android:ellipsize="end"
            android:text="address"
            />
        <ImageView
            android:id="@+id/commit_dingdan_update"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bk_edt"
            android:padding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/commit_dingdan_delete"
            android:layout_below="@+id/commit_dingdan_phone"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/commit_dingdan_delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bk_dlt"
            android:padding="7dp"
            android:layout_alignBottom="@+id/commit_dingdan_update"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="#e6e6e6"/>
</LinearLayout>
