<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/BigTab1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bigtab_shape"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_widthPercent="33.3%w"
        
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <ImageView
            android:id="@+id/BigTab1_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:layout_heightPercent="@string/size_BigTab_img"
            app:layout_widthPercent="@string/size_BigTab_img" />

        <TextView
            android:id="@+id/BigTab2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_bigTab1"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:paddingTop="5dp"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/BigTab2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="33.3%w"
        android:layout_toRightOf="@+id/BigTab1"
      
        android:background="@drawable/home_bigtab_shape"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/BigTab2_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_heightPercent="@string/size_BigTab_img"
            app:layout_widthPercent="@string/size_BigTab_img"
            />

        <TextView
            android:id="@+id/BigTab3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:paddingTop="5dp"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/BigTab3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="33.3%w"
        android:layout_toRightOf="@+id/BigTab2"
        android:background="@drawable/home_bigtab_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/BigTab3_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_heightPercent="@string/size_BigTab_img"
            app:layout_widthPercent="@string/size_BigTab_img"
            />

        <TextView
            android:id="@+id/BigTab1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寺庙"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:paddingTop="5dp"/>
    </com.zhy.android.percent.support.PercentLinearLayout>



</com.zhy.android.percent.support.PercentRelativeLayout>
