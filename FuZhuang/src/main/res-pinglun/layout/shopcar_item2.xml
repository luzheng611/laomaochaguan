<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/checkbox_sel"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/good_img"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_toRightOf="@+id/checkbox"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:background="@drawable/shape_good_stroke_1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:id="@+id/good_name"
            android:layout_toRightOf="@+id/good_img"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/good_img"
            android:text="名称"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:id="@+id/good_tag"
            android:layout_toRightOf="@+id/good_img"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/good_name"
            android:layout_marginTop="5dp"
            android:text="属性"/>
        <ImageView
            android:id="@+id/good_jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/good_img"
            android:src="@drawable/jian"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_alignLeft="@id/good_name"
            android:background="@drawable/jiajian_sel"/>
        <EditText
            android:id="@+id/good_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="0"
            android:minEms="4"
            android:maxLength="5"
            android:inputType="number"
            android:background="@drawable/jiajian_sel"
            android:gravity="center"
            android:layout_toRightOf="@+id/good_jian"
            android:layout_alignBottom="@+id/good_jian"/>
        <ImageView
            android:id="@+id/good_jia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/good_img"
            android:src="@drawable/jia"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:layout_toRightOf="@+id/good_num"
            android:background="@drawable/jiajian_sel"/>
        <TextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="2dp"
            android:layout_alignBottom="@+id/good_jia"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="删除"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@color/red"
        android:textColor="@color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
