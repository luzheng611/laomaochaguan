<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:layout_width="40dp"
        android:layout_centerVertical="true"
        android:id="@+id/pintuan_view_head"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pintuan_view_name"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="用户名"
        android:layout_toRightOf="@+id/pintuan_view_head"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pintuan_view_time_num"
        android:textSize="11dp"
        android:textColor="@color/wordhuise"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/pintuan_view_head"
        android:layout_alignBottom="@+id/pintuan_view_head"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去参团"
        android:textSize="15dp"
        android:textColor="@color/red"
        android:background="@drawable/sel_topintuan"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/toCantuan"/>

</RelativeLayout>